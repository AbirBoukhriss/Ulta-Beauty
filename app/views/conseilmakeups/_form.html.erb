<%= form_with model: conseilmakeup, local: true do |form| %>
      <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
        <% conseilmakeup.errors.full_messages_for(:title).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>

      <div>
        <%= form.label :body %><br>
        <%= form.text_area :body %><br>
        <% conseilmakeup.errors.full_messages_for(:body).each do |message| %>
          <div><%= message %></div>
        <% end %>
      </div>
       <div class="field">
        <%=form.file_field :image %>
      </div>


      <div>
        <%= form.submit %>
      </div>
      <div>
        <%= form.label :status %><br>
        <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
      </div>

<% end %>